<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margen_arriba_xlarge"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/imageSuper"
        android:layout_width="175dp"
        android:layout_height="175dp"
        app:srcCompat="@drawable/ic_store_black_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/viewSupermercado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_supers"
            android:textSize="@dimen/letras_xlarge" />

        <TextView
            android:id="@+id/viewSucursal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_sucursal"
            android:textSize="@dimen/letras_large" />

    </LinearLayout>

</LinearLayout>