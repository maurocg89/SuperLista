<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margen_arriba_xlarge">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margen_lateral_xlarge"
        android:layout_marginRight="@dimen/margen_lateral_xlarge"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageIconoSinFondo"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:srcCompat="@drawable/icono_sin_fondo"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/text_version_apk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/version_apk"
            android:textAlignment="center"
            android:textSize="@dimen/letras_xlarge"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textInformacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margen_lateral_xlarge"
            android:text="@string/informacion"
            android:textSize="@dimen/letras_xlarge"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewTextoInformacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="@string/text_informacion"
                android:textSize="@dimen/letras_large"
                android:textStyle="italic"
                tools:targetApi="jelly_bean" />

            <TextView
                android:id="@+id/textViewUbicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="@string/text_ubicacion"
                android:textSize="@dimen/letras_large"
                tools:targetApi="jelly_bean" />

            <TextView
                android:id="@+id/textViewDesarroladores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margen_lateral_xlarge"
                android:text="@string/text_desarrolladores"
                android:textSize="@dimen/letras_xlarge"
                android:textStyle="bold"
                tools:ignore="RtlHardcoded,RtlSymmetry" />

            <TextView
                android:id="@+id/textViewIntegrantes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="@string/text_integrantes"
                android:textSize="@dimen/letras_large"
                android:textStyle="italic"
                tools:targetApi="jelly_bean" />

            <Button
                android:id="@+id/buttonEnviarComentario"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margen_lateral_xlarge"
                android:text="@string/boton_env_comentario"
                android:textSize="@dimen/letras_large"
                android:textAllCaps="false" />


        </LinearLayout>

    </LinearLayout>

</ScrollView>