<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margen_arriba_xlarge"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/topCategoria"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp">

        <EditText
            android:id="@+id/etBuscarCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/buscar"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textSize="@dimen/letras_xlarge"
            android:maxLines="1" />

        <ImageView
            android:id="@+id/imgBtnSpeakCat"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/microphone"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_microphone" />
    </RelativeLayout>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lvCategorias"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/boton_de_accion_categorias"
            android:layout_width="@dimen/width_height_fab_xlarge"
            android:layout_height="@dimen/width_height_fab_xlarge"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:adjustViewBounds="false"
            app:backgroundTint="@android:color/holo_blue_light"
            app:elevation="0dp"
            app:srcCompat="@mipmap/icono_add" />

    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>